{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cave list</h1>

    <table class="table table-striped">

        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Length</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
            <td>{{ loop.index }}.</td>
                <td>
                    <a href="{{ path('cave_show', { 'id': entity.id }) }}">
                        {{ entity.name }}
                    </a>
                </td>
                <td>{{ entity.depth }}</td>
                <td>
                <a href="{{ path('cave_show', { 'id': entity.id }) }}" class="btn btn-default" role="button">show</a>
                <a href="{{ path('cave_edit', { 'id': entity.id }) }}" class="btn btn-default" role="button">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p>
        <a
            href="{{ path('cave_new') }}"
            class="btn btn-primary btn-lg"
            role="button">
                Create a new entry
        </a>
    </p>
    {% endblock %}
