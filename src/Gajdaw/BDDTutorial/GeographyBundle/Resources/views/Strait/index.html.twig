{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Strait list</h1>

    <div class="count">
        Number of records: {{ pagination.getTotalItemCount }}
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Length</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for strait in pagination %}
                <tr>
                    <td>{{ loop.index }}.</td>
                    <td><a href="{{ path('strait_show', { 'id': strait.id }) }}">{{ strait.name }}</a></td>
                    <td>{{ strait.length }}</td>
                    <td>
                        <a href="{{ path('strait_show', { 'id': strait.id }) }}" class="btn btn-default" role="button">show</a>
                        <a href="{{ path('strait_edit', { 'id': strait.id }) }}" class="btn btn-default" role="button">edit</a>
                    </td>

                </tr>
            {% endfor %}
        </tbody>
    </table>

    <p>
        <a
            href="{{ path('strait_new') }}"
            class="btn btn-primary btn-lg"
            role="button">
            Create a new entry
        </a>
    </p>
{% endblock %}
