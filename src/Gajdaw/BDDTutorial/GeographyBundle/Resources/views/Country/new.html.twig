{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Country creation</h1>

    {{ form_start(form) }}

        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_errors(form.country) }}
            {{ form_label(form.country, 'Country', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_errors(form.area) }}
            {{ form_label(form.area, 'Area', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.area, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-default'}}) }}
            </div>
        </div>

    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('country') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
